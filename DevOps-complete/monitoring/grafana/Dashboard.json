{
  "id": null,
  "title": "DevOps Microservice Metrics",
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "panels": [
    {
      "type": "graph",
      "title": "Total Requests",
      "targets": [
        {
          "expr": "app_requests_total",
          "legendFormat": "{{job}}"
        }
      ],
      "datasource": "Prometheus",
      "id": 1
    },
    {
      "type": "graph",
      "title": "Request Latency (Seconds)",
      "targets": [
        {
          "expr": "rate(app_request_latency_seconds_sum[1m]) / rate(app_request_latency_seconds_count[1m])",
          "legendFormat": "Average Latency"
        }
      ],
      "datasource": "Prometheus",
      "id": 2
    }
  ]
}
